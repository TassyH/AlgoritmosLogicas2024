import java.util.Scanner;

public class ExercicioTreze {
    public static void main(String[] args) {
          Scanner teclado = new Scanner(System.in);
        
        System.out.println("Entre com o valor a pagar ");
        double valorVenda = teclado.nextDouble();

        double desconto = 0.10;
        double valorComDesconto = valorVenda - (valorVenda*desconto);
        double valoComParcelamento = valorComDesconto/3;
        double comissao = 0.05;
        double comissaoVendedor = (valorComDesconto*comissao);
        System.out.println("Valor total a pagar com 10% de desconto:  "+valorComDesconto);
        System.out.println("Valor do pacelamento de 3x sem juros:  "+valoComParcelamento+" de 3x cada");
        System.out.println("Sua comiss√£o caso o pagamento seja a vista  "+comissaoVendedor);


    }
}
