import java.text.DecimalFormat;
import java.util.Scanner;

public class PrimeiroExercicioDaLista {

	public static void main(String[] args) {
		DecimalFormat format = new DecimalFormat();
		
		Scanner teclado = new Scanner(System.in);
		System.out.println("Conversor reais >>> dolar");
		System.out.println("digite o valor em reais: ");
		double valorReais = teclado.nextDouble();
		double valorDolar = 4.98;
		double calculoConversaoReais = valorReais * valorDolar;
		
		System.out.println("O valor em reais que vc informou foi: "+valorReais);
		format.format(calculoConversaoReais);
		System.out.println("O valor convertido em dolar Ã© de "+format);
		
	}

}
